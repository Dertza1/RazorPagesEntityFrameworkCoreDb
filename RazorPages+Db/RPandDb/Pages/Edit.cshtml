@page "{id:int}"
@model RPandDb.Pages.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
<form method="post">
    <input name="id" value="@Model.User.Id" type="hidden" />
    <p>
        <label>Имя</label><br />
        <input name="name" asp-for="User.Name" value="@Model.User.Name" />
    </p>
    <input type="submit" value="Сохранить" />
</form>
}
